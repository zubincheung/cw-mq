{
    "compilerOptions": {
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "alwaysStrict": true,
      "sourceMap": true,
      "noEmit": false,
      "noEmitHelpers": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "importHelpers": true,
      "strictNullChecks": false,
      "allowUnreachableCode": true,
      "lib": [
        "es2017"
      ],
        "typeRoots": [
            "node_modules/@types",
            "./lib"
        ],
        "outDir": "./lib"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "**/*.test.ts",
        "temp"
    ],
    "compileOnSave": true,
    "buildOnSave": true
}
